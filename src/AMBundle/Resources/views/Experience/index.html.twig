{% extends('AMBundle::base.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .toggle.btn {
            width: 4em !important;
            height: 35px !important;
            margin-bottom: 1em;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1>Mes exp√©riences</h1>
        </div>
        <div class="card-block">
                {% for experience in experiences %}
                    {% if experience.id == 1 %}
                    <input id="toggle-event{{ experience.id }}" type="checkbox" checked data-toggle="toggle" data-onstyle="success">
                    <div class="card">
                    {% else %}
                    <input id="toggle-event{{ experience.id }}" type="checkbox" data-toggle="toggle">
                    <div class="card" style="display:none">
                    {% endif %}
                        <div class="card-header">
                            {{ experience.titre }}
                        </div>
                        <div class="card-block">
                            <h4 class="card-title">
                                <small>{% if experience.dateDebut %}{{ experience.dateDebut|date('Y-m-d H:i:s') }}{% endif %} -- {% if experience.dateFin %}{{ experience.dateFin|date('Y-m-d H:i:s') }}{% endif %}</small>
                            </h4>
                            <p class="card-text">{{ experience.description }}</p>
                        </div>
                        <div class="card-footer text-muted">
                            {{ experience.membres }}
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('experience_show', { 'id': experience.id }) }}">show</a>
                            <a href="{{ path('experience_edit', { 'id': experience.id }) }}">edit</a>
                            {% endif %}
                        </div>
                    </div>
                    <hr />
                {% endfor %}
        </div>
        <div class="card-footer text-muted">
            {% if is_granted('ROLE_ADMIN') %}
            <ul>
                <li>
                    <a href="{{ path('experience_new') }}">Create a new entry</a>
                </li>
            </ul>
            {% endif %}
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function() {
            {% for experience in experiences %}

            $('#toggle-event{{ experience.id }}').change(function() {
                that = $(this).parent().next('.card');
                if(!$(this).prop('checked'))
                        that.hide();
                else
                        that.show();

            });

        {% endfor %}
        });
    </script>
{% endblock %}
