{% extends('AMBundle::base.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .pdfobject-container { height: 300px;}
        .pdfobject { border: 1px solid #666; }
    </style>
{% endblock %}

{% block body %}

    <div class="card col-md-12">
        <div class="card-header">
            Mon CV
        </div>
        <div class="card-block">
            <div id="monCV"></div>
        </div>
        <div class="card-footer text-muted">
            <div class="col-md-offset-4">
                <h4>Me contacter</h4>
                <div class="row">
                    <div class="col-md-8">
                        {{ form_start(form) }}
                        {{ form_row(form.nom, {'label' : 'Votre nom :'}) }}
                        {{ form_row(form.titre, {'label' : 'Objet :'}) }}
                        {{ form_row(form.message, {'label' : 'Votre message :'}) }}
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                {{ form_widget(form.submit) }}
                            </div>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/pdfobject.min.js') }}"></script>
    <script>PDFObject.embed("{{ asset('doc/cv.pdf') }}", "#monCV");</script>
{% endblock %}